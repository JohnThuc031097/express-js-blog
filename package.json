  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run scss-build && npm run start",
    "husky-install": "husky install",
    "husky-add": "husky add .husky/pre-commit lint-staged",
    "start": "nodemon --inspect ./src/server.js",
    "scss-watch": "node-sass -w src/resources/scss/ -o src/public/css/",
    "scss-build": "node-sass src/resources/scss src/public/css/app.css"
  },
  "lint-staged": {
    "src/**/*.{js,json,scss}": "prettier --tab-width 4 --trailing-comma all --write"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JohnThuc031097/express-js-blog.git"
